extends ../layout

block content
  script.
    $(document).ready(function(){
      $('.order-table').dataTable( {
        info: false,
        paging: false,
        searching: false,
        ordering: false,
        scrollY: '250px',
        autowidth: true,
        responsive: true
      });
      $('.market-toggle').tooltip({
        animation: true,
        delay: { hide: 500 },
      });
      $('.view-summary').on('click', function(){
        $('#chart-panel').hide();
        $('#summary-panel').show();
      });
      $('.view-chart').on('click', function(){
        $('#summary-panel').hide();
        $('#chart-panel').show();
      });
    });
  .col-xs-12.col-md-12
    div.container.navbar-default
      ul.nav.navbar-nav
        li
          a.navbar-link.loading(href='/charts/transactions')
            span #{settings.locale.charts_txday}
        li
          a.navbar-link.loading(href='/charts/transactions-total')
            span #{settings.locale.charts_txtotal}
        li
          a.navbar-link.loading(href='/charts/transactions-block')
            span #{settings.locale.charts_txblock}
        li
          a.navbar-link.loading(href='/charts/total-supply')
            span #{settings.locale.charts_supply}
        li
          a.navbar-link.loading(href='/charts/market-cap-usd')
            span #{settings.locale.charts_capusd}
        li
          a.navbar-link.loading(href='/charts/market-cap-btc')
            span #{settings.locale.charts_capbtc}
        li
          a.navbar-link.loading(href='/charts/price-usd')
            span #{settings.locale.charts_priceusd}
        li
          a.navbar-link.loading(href='/charts/price-btc')
            span #{settings.locale.charts_pricebtc}
        li
          a.navbar-link.loading(href='/charts/volume-usd')
            span #{settings.locale.charts_volumeusd}
        li
          a.navbar-link.loading(href='/charts/volume-btc')
            span #{settings.locale.charts_volumebtc}
        li
          a.navbar-link.loading(href='/charts/zeromint')
            span #{settings.locale.zeromint}
        li
          a.navbar-link.loading(href='/charts/zerospend')
            span #{settings.locale.zerospend}

    block charts_view
